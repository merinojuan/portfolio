---
import { getI18N } from '@i18n/index';
import ApplicationItem from '@components/ApplicationItem.astro';
import AstroLogo from '@logos/AstroLogo.astro';
import DaisyUILogo from '@logos/DaisyUILogo.astro';
import FirebaseLogo from '@logos/FirebaseLogo.astro';
import ReminderLogo from '@logos/ReminderLogo.astro';
import TailwindLogo from '@logos/TailwindLogo.astro';
import ThePlanningPokerLogo from '@logos/ThePlanningPokerLogo.astro';
import VueLogo from '@logos/VueLogo.astro';
import VuetifyLogo from '@logos/VuetifyLogo.astro';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale });
---

<div class="divider max-w-24 mx-auto py-16"></div>
<section class="max-w-4xl mx-auto">
  <h1 class="text-xl text-center font-medium tracking-tight pb-10 px-8">
    {i18n.APPLICATIONS_TITLE}
  </h1>
  <div class="flex justify-center flex-wrap gap-8">
    <ApplicationItem name="Reminder" link="https://github.com/merinojuan/reminder">
      <Fragment slot="app-logo">
        <ReminderLogo class="inline-block w-16 h-16 md:w-24 md:h-24" />
      </Fragment>
      <Fragment slot="tec-logos">
        <AstroLogo class="w-5 inline-block" />
        <DaisyUILogo class="w-5 inline-block" />
        <TailwindLogo class="w-5 inline-block" />
        <VueLogo class="w-5 inline-block" />
        <FirebaseLogo class="w-5 inline-block" />
      </Fragment>
    </ApplicationItem>
    <ApplicationItem name="The Planning Poker" link="https://github.com/merinojuan/theplanningpoker">
      <Fragment slot="app-logo">
        <ThePlanningPokerLogo class="inline-block w-16 h-16 md:w-24 md:h-24" />
      </Fragment>
      <Fragment slot="tec-logos">
        <VueLogo class="w-5 inline-block" />
        <VuetifyLogo class="w-5 inline-block" />
        <FirebaseLogo class="w-5 inline-block" />
      </Fragment>
    </ApplicationItem>
  </div>
</section>
