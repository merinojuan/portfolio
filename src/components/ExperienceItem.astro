---
import background from '@assets/background.svg';
interface Props {
	name: string;
}

const { name } = Astro.props;
---

<div class="inline-block w-24 h-24 md:w-32 md:h-32">
  <div class="atropos experience-item-atropos w-full h-full">
    <div class="atropos-scale">
      <div class="atropos-rotate">
        <div class="atropos-inner rounded-full">
          <div class="background-content bg-base-100" data-atropos-offset="0">
            <img src={background.src} fetchpriority="high" data-atropos-offset="-5" />
          </div>
          <div class="data-content" data-atropos-offset="0">
            <div class="flex flex-col items-center justify-center h-full w-full">
              <slot />
              <p class="font-medium text-xs md:text-sm m-0 mt-1" data-atropos-offset="-12">{name}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.background-content {
  position: relative;
  left: -5rem;
  top: -5rem;
  width: calc(100% + 10rem);
  height: calc(100% + 10rem);
}
.background-content img {
  position: absolute;
  width: 100%;
  height: 100%;
  -o-object-fit: cover;
  object-fit: cover;
}

.data-content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
</style>
